<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;net45;netstandard2.0</TargetFrameworks>
    <Version>0.5.0</Version>
    <Authors>Yevgeniy Shunevych</Authors>
    <Company>Yevgeniy Shunevych</Company>
    <Product>Atata Framework</Product>
    <Description>C#/.NET package containing a set of Atata components for automated web testing integration with Kendo UI HTML Framework.</Description>
    <Copyright>Â© Yevgeniy Shunevych 2017</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/atata-framework/atata-kendoui/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/atata-framework/atata-kendoui</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/atata-framework/atata/master/logo.png?v2</PackageIconUrl>
    <RepositoryUrl>https://github.com/atata-framework/atata-kendoui</RepositoryUrl>
    <PackageTags>atata automation testing test selenium webdriver browser kendo kendoui</PackageTags>
    <PackageReleaseNotes>0.5.0 - https://atata-framework.github.io/blog/2017/10/18/atata.kendoui-0.5.0-released/
0.4.1 - https://github.com/atata-framework/atata-kendoui/releases/tag/v0.4.1
0.4.0 - https://github.com/atata-framework/atata-kendoui/releases/tag/v0.4.0
0.3.0 - Initial release.</PackageReleaseNotes>
    <CodeAnalysisRuleSet>..\Atata.ruleset</CodeAnalysisRuleSet>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Atata" Version="0.16.0" />
    <PackageReference Include="Atata.WebDriverExtras" Version="0.14.0" />
    <PackageReference Include="Selenium.WebDriver" Version="3.8.0" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

   <ItemGroup Condition="'$(TargetFramework)' == 'net40' Or '$(TargetFramework)' == 'net45'">
     <Reference Include="Microsoft.CSharp" />
   </ItemGroup>

</Project>
